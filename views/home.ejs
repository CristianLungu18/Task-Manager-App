<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/home.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title>Home</title>
  </head>
  <body>
    <div class="task-box">
      <h1 class="title">Task Manager App</h1>
      <form action="/" method="POST" class="form-box">
        <input placeholder="Your task..." class="input-task" name="name" />
        <div class="alert-box">
          <p class="alert-text" style="color: crimson"><%= alert %></p>
        </div>
        <div class="button-box">
          <button type="submit" class="add-btn">Submit</button>
        </div>
      </form>
    </div>
    <div class="task-list">
      <% if(Tasks.length === 0){ %>
      <div class="task">
        <div class="input-text" style="text-align: center">
          The task list is empty!
        </div>
      </div>
      <%} else{ Tasks.forEach(task=>{ %>
      <div class="task">
        <div
          class="input-text <%= task.completed === 'on' ? 'completed' : '' %>"
        >
          <%= task.name%>
        </div>
        <div class="edit-box">
          <div class="edit-btn-box">
            <a class="edit-btn" href="/edit-task/<%= task.id %>">Edit</a>
          </div>
          <div class="remove-btn-box">
            <a class="remove-btn" href="/remove/<%= task.id %>">Remove</a>
          </div>
        </div>
      </div>
      <%})%> %> <% }%>
    </div>
  </body>
</html>
